Sub DeleteColumnsAndSortAndColorDates()
    Dim wsName As String
    Dim ws As Worksheet
    Dim rng As Range
    Dim cell As Range
    Dim todayDate As Date
    Dim oneMonthDate As Date
    Dim twoMonthDate As Date
    Dim lastRow As Long
    Dim headerRange As Range
    Dim dataRange As Range

    ' Prompt the user for the worksheet name
    wsName = InputBox("Please enter the name of the worksheet:", "Worksheet Name")
    
    ' Check if the user entered a name
    If wsName = "" Then
        MsgBox "No worksheet name entered.", vbExclamation
        Exit Sub
    End If
    
    ' Define the worksheet
    On Error Resume Next
    Set ws = ThisWorkbook.Sheets(wsName)
    On Error GoTo 0
    
    ' Check if the worksheet exists
    If ws Is Nothing Then
        MsgBox "The worksheet '" & wsName & "' does not exist.", vbExclamation
        Exit Sub
    End If
    
    ' Confirm worksheet found
    MsgBox "Worksheet '" & wsName & "' found."

    ' Delete columns B and F
    ws.Columns("B").Delete
    ws.Columns("E").Delete ' Column E now because after deleting column B, the original F becomes E
    
    ' Find the last row with data in the new column B
    lastRow = ws.Cells(ws.Rows.Count, "B").End(xlUp).Row
    
    ' Define the range to color and sort (assuming data starts from row 1)
    Set rng = ws.Range("A1:C" & lastRow)
    
    ' Define date variables
    todayDate = Date
    oneMonthDate = DateAdd("m", 1, todayDate)
    twoMonthDate = DateAdd("m", 2, todayDate)

    ' Define the range of dates in the new column B
    Set dataRange = ws.Range("B2:B" & lastRow)

    ' Loop through each cell in the range
    For Each cell In dataRange
        If IsDate(cell.Value) Then
            Select Case cell.Value
                Case Is <= todayDate
                    cell.Interior.Color = RGB(255, 0, 0) ' Red
                Case Is <= oneMonthDate
                    cell.Interior.Color = RGB(255, 255, 0) ' Yellow
                Case Is <= twoMonthDate
                    cell.Interior.Color = RGB(255, 165, 0) ' Orange
                Case Else
                    cell.Interior.Color = RGB(0, 255, 0) ' Green
            End Select
        End If
    Next cell
    
    ' Sort the range by the new column B (Date)
    rng.Sort Key1:=ws.Range("B1"), Order1:=xlAscending, Header:=xlYes
    
    ' Set font to Courier New, size 11
    rng.Font.Name = "Courier New"
    rng.Font.Size = 11
    
    ' Draw borders around the table
    With rng.Borders
        .LineStyle = xlContinuous
        .ColorIndex = 0
        .TintAndShade = 0
        .Weight = xlThin
    End With
    
    ' Format the header row
    Set headerRange = ws.Range("A1:C1")
    With headerRange
        .Interior.Color = RGB(192, 192, 192) ' Gray
        .Font.Bold = True
        .Font.Size = 12
    End With
    
    ' Confirm completion
    MsgBox "Deleting columns, coloring, sorting, and formatting completed."
End Sub
