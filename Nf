Sub ReplaceMultipleDropdownsWithTitles()
    Dim ccList As Collection
    Dim ccFirst As ContentControl
    Dim ccSecond As ContentControl
    Dim patternTitle As String
    Dim destinationTitle As String
    Dim i As Integer

    ' Define the pattern title (source) and destination title
    patternTitle = "SourceDropdown"     ' Replace with the title of the source dropdown
    destinationTitle = "DestinationDropdown" ' Replace with the title of the destination dropdown

    ' Create a collection to store dropdowns
    Set ccList = New Collection

    ' Loop through all content controls to identify dropdowns
    For Each cc In ActiveDocument.ContentControls
        ' Only work with dropdown lists
        If cc.Type = wdContentControlDropdownList Then
            ccList.Add cc
        End If
    Next cc
    
    ' Ensure at least two dropdowns exist in the document
    If ccList.Count >= 2 Then
        ' Loop through the collection and replace the dropdowns with matching titles
        For i = 1 To ccList.Count
            Set ccFirst = ccList(i)
            
            ' Check if the current content control is the pattern (source)
            If ccFirst.Title = patternTitle Then
                For Each ccSecond In ccList
                    ' Check if the content control is the destination
                    If ccSecond.Title = destinationTitle Then
                        ' Clear the destination dropdown's items
                        ccSecond.DropdownListEntries.Clear
                        
                        ' Copy items from the pattern (source) dropdown to the destination dropdown
                        For Each item In ccFirst.DropdownListEntries
                            ccSecond.DropdownListEntries.Add item.Text
                        Next item
                        
                        ' Optionally select the first item in the destination dropdown
                        ccSecond.DropdownListEntries(1).Select
                    End If
                Next ccSecond
            End If
        Next i
        
        MsgBox "Dropdown menus replaced successfully."
    Else
        MsgBox "There are not enough dropdowns to replace."
    End If
End Sub
