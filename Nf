Sub SetSymbolCheckBoxesToCross()

  Dim strFind As String
  Dim strReplace As String

  ' Set the character code for the checkbox you want to replace (find it in the Symbol dialog)
  strFind = "^u" & "00A3"  ' Example: Wingdings checkbox (replace with your code)

  ' Set the character code for the cross symbol you want to use (in the same font)
  strReplace = "^u" & "00A5"  ' Example: Wingdings cross (replace with your code)

  ' Use Find and Replace to replace all instances
  With Selection.Find
    .ClearFormatting
    .Replacement.ClearFormatting
    .Text = strFind
    .Replacement.Text = strReplace
    .Forward = True
    .Wrap = wdWrapContinue
    .Format = False
    .MatchCase = False
    .MatchWholeWord = False
    .MatchWildcards = False
    .MatchSoundsLike = False
    .MatchAllWordForms = False
    .Execute Replace:=wdReplaceAll
  End With

  MsgBox "Replaced all instances of the checkbox symbol.", vbInformation, "Checkboxes Updated"

End Sub
