Sub ResetDropdownValue()
    Dim ff As FormField
    Dim dropdownName As String
    
    ' Define the name of the dropdown FormField you want to reset
    dropdownName = "YourDropdownName"  ' Replace with the name of your dropdown
    
    ' Loop through all FormFields in the document
    For Each ff In ActiveDocument.FormFields
        ' Check if this is a dropdown (FormField type 4)
        If ff.Type = wdFieldFormDropDown Then
            ' Check if this is the correct dropdown by name
            If ff.Name = dropdownName Then
                ' Reset the value by setting it to the first item (or any default item)
                ff.DropDown.Value = ""  ' Set to empty value to reset
                
                ' Alternatively, you can reset it to the first item in the list (if needed)
                ' ff.DropDown.Value = ff.DropDown.ListEntries(1).Value
                
                MsgBox "Dropdown value has been reset."
                Exit Sub
            End If
        End If
    Next ff
    
    ' If dropdown is not found
    MsgBox "Dropdown not found."
End Sub
