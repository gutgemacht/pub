Sub SetFormCheckBoxesToCross()

  Dim ff As FormField

  For Each ff In ActiveDocument.FormFields

    If ff.Type = wdFieldFormCheckBox Then
      ff.CheckBox.Value = False  ' Uncheck (you might need to set to True for "X" depending on how your "X" is displayed)
      ff.Range.Text = "X" ' Set the text to "X" (or your cross symbol)

    End If

  Next ff

  MsgBox "Found and updated " & ActiveDocument.FormFields.Count & " form field checkboxes.", vbInformation, "Checkboxes Updated"

End Sub
