Sub CreateComboBox()
    Dim cb As ContentControl
    
    ' Insert a ComboBox Content Control at the cursor position
    Set cb = ActiveDocument.ContentControls.Add(wdContentControlDropdownList)
    
    ' Set the title (name) of the dropdown
    cb.Title = "StatusDropdown"
    
    ' Add three options to the dropdown
    With cb.DropdownListEntries
        .Add "‚úÖ Green Checkmark"
        .Add "‚ùå Red Cross"
        .Add "üîµ Blue Circle"
    End With
    
    ' Set the default value (e.g., blue circle)
    cb.DropdownListEntries(3).Select
    
    MsgBox "Dropdown list created!", vbInformation
End Sub
