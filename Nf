Sub CreateDropdown()
    Dim fld As FormField
    Dim rng As Range
    
    ' Set the position in the document
    Set rng = Selection.Range
    
    ' Add a dropdown list (DropDown)
    Set fld = ActiveDocument.FormFields.Add(rng, wdFieldFormDropDown)
    
    ' Set the field name (can be used for finding it later)
    fld.Name = "StatusDropdown"
    
    ' Add three possible options
    With fld.DropDown.ListEntries
        .Add "‚úÖ Green Checkmark"
        .Add "‚ùå Red Cross"
        .Add "üîµ Blue Circle"
    End With
    
    ' Set the default value (e.g., the blue circle)
    fld.DropDown.Value = "üîµ Blue Circle"
    
    MsgBox "Dropdown list created!", vbInformation
End Sub
