Sub SetCheckBoxesToCross()

  Dim cc As ContentControl

  ' Loop through each content control in the active document
  For Each cc In ActiveDocument.ContentControls

    ' Check if the content control is a checkbox
    If cc.Type = wdContentControlCheckBox Then

      ' Set the checkbox value to display a cross (assuming "X" is the value for cross)
      cc.Range.Text = "X"  ' Or the appropriate value for your cross symbol

    End If

  Next cc

End Sub
