Sub ReplaceCheckedContentControlCheckboxes()
    Dim cc As ContentControl

    ' Перебираем все элементы управления содержимым
    For Each cc In ActiveDocument.ContentControls
        ' Проверяем, является ли элемент чекбоксом
        If cc.Type = wdContentControlCheckBox Then
            ' Проверяем, отмечен ли чекбокс
            If cc.Checked Then
                ' Изменяем символ для отмеченного чекбокса на ✗
                cc.CheckedSymbol = "✗"
                cc.Checked = True ' Применяем новый символ
            End If
        End If
    Next cc
End Sub
