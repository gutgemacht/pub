Sub ReplaceCheckedContentControlCheckboxes()
    Dim cc As ContentControl

    ' Перебираем все элементы управления содержимым в документе
    For Each cc In ActiveDocument.ContentControls
        ' Проверяем, является ли элемент чекбоксом
        If cc.Type = wdContentControlCheckBox Then
            ' Проверяем, установлен ли чекбокс
            If cc.Checked Then
                ' Снимаем отметку
                cc.Checked = False
                ' Заменяем на символ ✗
                cc.Range.Text = "✗"
                cc.Range.Font.Color = wdColorRed ' Делаем крест красным
            End If
        End If
    Next cc
End Sub
