Sub CreateCheckbox()
    Dim cc As ContentControl
    
    ' Create a new ContentControl checkbox
    Set cc = ActiveDocument.ContentControls.Add(wdContentControlCheckBox)
    
    ' Set the initial state of the checkbox (unchecked)
    cc.Checked = False  ' Initial state (unchecked)
    
    ' Set Title or Tag (optional)
    cc.Title = "MyCheckbox"
    cc.Tag = "CheckboxTag"
    
    ' Add description or text (optional)
    cc.Range.Text = "‚òê My checkbox"
End Sub
