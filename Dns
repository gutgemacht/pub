Sub ListContentControlIDs()
    Dim cc As ContentControl
    Dim i As Long
    Dim message As String

    ' Initialize the message to display in the MsgBox
    message = "Content Control IDs in the document:" & vbCrLf & vbCrLf
    
    ' Loop through all content controls in the document
    For Each cc In ActiveDocument.ContentControls
        message = message & "Title: " & cc.Title & ", Tag: " & cc.Tag & ", ID: " & cc.ID & vbCrLf
    Next cc
    
    ' If no content controls are found, notify the user
    If message = "Content Control IDs in the document:" & vbCrLf & vbCrLf Then
        message = "No content controls found."
    End If

    ' Display all IDs in a message box
    MsgBox message, vbInformation, "Content Control IDs"
End Sub
