Sub ReplaceDropdownCheckWithCheck1()
    Dim cc As ContentControl
    Dim newCC As ContentControl
    Dim rng As Range
    Dim refCC As ContentControl
    Dim foundRef As Boolean
    Dim i As Integer

    ' Find a reference dropdown with Title "Check1" (used for copying properties)
    foundRef = False
    For Each refCC In ActiveDocument.ContentControls
        If refCC.Type = wdContentControlDropdown And refCC.Title = "Check1" Then
            foundRef = True
            Exit For
        End If
    Next refCC

    ' If no "Check1" dropdown exists, stop and show an error
    If Not foundRef Then
        MsgBox "No dropdown with Title 'Check1' found. Cannot replace 'Check'.", vbCritical, "Error"
        Exit Sub
    End If

    ' Loop backwards to prevent index shifting
    For i = ActiveDocument.ContentControls.Count To 1 Step -1
        Set cc = ActiveDocument.ContentControls(i)

        ' If it's a dropdown with Title "Check"
        If cc.Type = wdContentControlDropdown And cc.Title = "Check" Then
            ' Save its position before deleting
            Set rng = cc.Range

            ' Delete the old dropdown
            cc.Delete

            ' Insert a new dropdown at the same position
            Set newCC = ActiveDocument.ContentControls.Add(wdContentControlDropdown, rng)

            ' Copy properties from "Check1"
            newCC.Title = refCC.Title
            newCC.Tag = refCC.Tag
            newCC.DropdownEntries = refCC.DropdownEntries ' Copy the dropdown list

        End If
    Next i

    MsgBox "All 'Check' dropdown menus have been replaced with 'Check1'.", vbInformation, "Process Complete"
End Sub
