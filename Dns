Sub SetCheckboxStateToChecked()

  Dim cc As ContentControl

  ' Loop through each content control in the document
  For Each cc In ActiveDocument.ContentControls

    ' Check if the content control is a checkbox (type 4)
    If cc.Type = 4 Then ' Type 4 corresponds to a checkbox

      ' Ensure that the content control supports the Checked property
      If cc.Checked <> vbNull Then
        ' Set the checkbox to checked (True)
        cc.Checked = True
      Else
        MsgBox "This checkbox does not support the Checked property.", vbCritical, "Invalid Checkbox"
      End If

    End If

  Next cc

  MsgBox "All checkboxes have been set to checked.", vbInformation, "Checkboxes Updated"

End Sub
