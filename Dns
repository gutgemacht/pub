Sub Debug_ListDropdowns()
    Dim cc As ContentControl
    Dim msg As String
    
    msg = "Found the following dropdowns:" & vbCrLf & vbCrLf
    
    For Each cc In ActiveDocument.ContentControls
        If cc.Type = wdContentControlDropdown Then
            msg = msg & "Title: " & cc.Title & " | Tag: " & cc.Tag & vbCrLf
        End If
    Next cc
    
    If msg = "Found the following dropdowns:" & vbCrLf & vbCrLf Then
        MsgBox "No dropdowns found!", vbExclamation, "Debug Info"
    Else
        MsgBox msg, vbInformation, "Dropdown List"
    End If
End Sub
