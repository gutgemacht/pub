Sub SetDropdownToCross()

  Dim cc As ContentControl
  Dim entry As ContentControlListEntry
  Dim found As Boolean ' Flag to track if "X" is found

  For Each cc In ActiveDocument.ContentControls

    If cc.Type = wdContentControlDropdown Then

      found = False ' Reset the flag for each dropdown

      For Each entry In cc.DropdownEntries  ' Correct way to loop through entries

        If LCase(entry.Text) = "x" Then
          entry.Select
          found = True
          Exit For ' Exit inner loop once "X" is found
        End If

      Next entry

      ' If "X" was not found, add it (optional):
      If Not found Then ' More readable way to check the flag
        cc.DropdownEntries.Add "X"
        cc.DropdownEntries(cc.DropdownEntries.Count).Select
      End If

    End If

  Next cc

  MsgBox "Processed dropdown content controls.", vbInformation, "Dropdowns Updated"

End Sub
