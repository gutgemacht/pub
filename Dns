Sub ListDropdownValues()
    Dim cc As ContentControl
    Dim i As Integer
    Dim output As String
    
    ' Loop through all content controls in the document
    For Each cc In ActiveDocument.ContentControls
        ' Check if it's a dropdown list
        If cc.Type = wdContentControlDropdown Then
            output = "Dropdown Title: " & cc.Title & " | Tag: " & cc.Tag & vbCrLf
            output = output & "Available Entries:" & vbCrLf
            
            ' Loop through all dropdown entries
            For i = 1 To cc.DropdownListEntries.Count
                output = output & "  " & i & ". " & cc.DropdownListEntries(i).Text & vbCrLf
            Next i
            
            output = output & String(40, "-") ' Separator for clarity
            
            ' Print to Immediate Window (Ctrl + G to view)
            Debug.Print output
        End If
    Next cc
    
    MsgBox "Dropdown list details have been printed to the Immediate Window.", vbInformation, "Process Complete"
End Sub
