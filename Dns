Sub Debug_ListType4Objects()
    Dim cc As ContentControl
    Dim msg As String
    Dim xmlData As String

    msg = "Found the following Type 4 content controls:" & vbCrLf & vbCrLf

    For Each cc In ActiveDocument.ContentControls
        If cc.Type = 4 Then  ' Type 4 (Supposed to be Checkboxes)
            xmlData = cc.XML ' Extracts XML data for analysis
            msg = msg & "Title: " & cc.Title & " | Tag: " & cc.Tag & vbCrLf
            msg = msg & "Checked: " & cc.Checked & " | Range Text: " & cc.Range.Text & vbCrLf
            msg = msg & "XML: " & Left(xmlData, 200) & "..." & vbCrLf & vbCrLf  ' Show only first 200 chars of XML
        End If
    Next cc

    If msg = "Found the following Type 4 content controls:" & vbCrLf & vbCrLf Then
        MsgBox "No Type 4 content controls found!", vbExclamation, "Debug Info"
    Else
        MsgBox msg, vbInformation, "Type 4 Content Controls"
    End If
End Sub
