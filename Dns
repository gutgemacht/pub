Sub SetHourglassSymbol()

  Dim cc As ContentControl

  ' Loop through each content control in the document
  For Each cc In ActiveDocument.ContentControls

    ' Check if the content control is a checkbox (type 4)
    If cc.Type = 4 Then ' Type 4 corresponds to a checkbox

      ' Check if the checkbox is checked
      If cc.Checked = True Then
        ' Set the content control text to the hourglass symbol (⏳)
        cc.Range.Text = "⏳"
      Else
        ' Set the content control text to an empty string or any other default
        cc.Range.Text = ""
      End If

    End If

  Next cc

  MsgBox "Hourglasses set for checked checkboxes.", vbInformation, "Hourglass Symbols Updated"

End Sub
