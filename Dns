Sub ReplaceSecondDropdownWithFirst()
    Dim ccFirst As ContentControl
    Dim ccSecond As ContentControl
    Dim tagFirst As String
    Dim tagSecond As String
    Dim i As Integer
    
    ' Specify the tags or titles you are looking for
    tagFirst = "Dropdown1"  ' Replace with the tag or title of your first dropdown
    tagSecond = "Dropdown2" ' Replace with the tag or title of your second dropdown
    
    ' Loop through all content controls in the document
    For Each cc In ActiveDocument.ContentControls
        ' Ensure the content control is a dropdown list
        If cc.Type = wdContentControlDropdownList Then
            ' Check if content control matches the tag or title
            If cc.Tag = tagFirst Or cc.Title = tagFirst Then
                Set ccFirst = cc
            ElseIf cc.Tag = tagSecond Or cc.Title = tagSecond Then
                Set ccSecond = cc
            End If
        End If
    Next cc
    
    ' Check if both dropdowns are found
    If Not ccFirst Is Nothing And Not ccSecond Is Nothing Then
        ' Clear the second dropdown's items
        ccSecond.DropdownListEntries.Clear
        
        ' Add items from the first dropdown to the second
        For i = 1 To ccFirst.DropdownListEntries.Count
            ccSecond.DropdownListEntries.Add ccFirst.DropdownListEntries(i).Text
        Next i
        
        ' Ensure the second dropdown reflects the changes
        ccSecond.DropdownListEntries(1).Select  ' Set a default selected entry if needed
        
        MsgBox "Dropdown menus replaced successfully."
    Else
        MsgBox "Both dropdown menus with specified tags or titles were not found."
    End If
End Sub
