Sub ReplaceSecondDropdownWithFirstByTag()
    Dim ccFirst As ContentControl
    Dim ccSecond As ContentControl
    Dim tagFirst As String
    Dim tagSecond As String

    ' Specify the tags or titles you are looking for
    tagFirst = "Dropdown1"  ' Replace with the tag or title of your first dropdown
    tagSecond = "Dropdown2" ' Replace with the tag or title of your second dropdown
    
    ' Loop through all content controls in the document
    For Each cc In ActiveDocument.ContentControls
        ' Check if content control matches the tags
        If cc.Tag = tagFirst Then
            Set ccFirst = cc
        ElseIf cc.Tag = tagSecond Then
            Set ccSecond = cc
        End If
    Next cc
    
    ' Check if both dropdowns are found
    If Not ccFirst Is Nothing And Not ccSecond Is Nothing Then
        ' Replace the second dropdown's items with the first one
        ccSecond.DropdownListEntries.Clear
        For Each item In ccFirst.DropdownListEntries
            ccSecond.DropdownListEntries.Add item.Text
        Next item
    Else
        MsgBox "Both dropdown menus with specified tags were not found."
    End If
End Sub
