Sub SetDropdownToCross()

  Dim cc As ContentControl
  Dim i As Long

  For Each cc In ActiveDocument.ContentControls

    If cc.Type = wdContentControlDropdown Then ' Check if it's a dropdown

      ' Find the index of the "X" item (case-insensitive)
      For i = 1 To cc.DropdownEntries.Count
        If LCase(cc.DropdownEntries(i).Text) = "x" Then ' Case-insensitive comparison
          cc.DropdownEntries(i).Select ' Select the "X" entry
          Exit For ' Exit the inner loop once found
        End If
      Next i

      ' If "X" was not found, you can add it (optional):
      If i > cc.DropdownEntries.Count Then ' If the loop finished without finding "X"
        cc.DropdownEntries.Add "X" ' Add "X" to the dropdown list
        cc.DropdownEntries(cc.DropdownEntries.Count).Select ' Select the newly added "X"
      End If

    End If

  Next cc

  MsgBox "Processed dropdown content controls.", vbInformation, "Dropdowns Updated"

End Sub
