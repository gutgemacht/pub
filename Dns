Sub ShowCheckboxSettings()

  Dim cc As ContentControl
  Dim checkboxDetails As String
  checkboxDetails = ""

  ' Loop through each content control in the document
  For Each cc In ActiveDocument.ContentControls

    ' Check if the content control is a checkbox (type 4)
    If cc.Type = 4 Then ' Type 4 corresponds to a checkbox

      ' Collect the checkbox properties
      checkboxDetails = checkboxDetails & "Checkbox Title: " & cc.Title & vbCrLf
      checkboxDetails = checkboxDetails & "Checkbox Tag: " & cc.Tag & vbCrLf
      checkboxDetails = checkboxDetails & "Checked: " & IIf(cc.Checked, "Yes", "No") & vbCrLf
      checkboxDetails = checkboxDetails & "Locked: " & IIf(cc.Locked, "Yes", "No") & vbCrLf
      checkboxDetails = checkboxDetails & "Value: " & cc.Value & vbCrLf
      checkboxDetails = checkboxDetails & "----------------------------------------" & vbCrLf

    End If

  Next cc

  ' Display the collected checkbox details in a message box
  If Len(checkboxDetails) > 0 Then
    MsgBox checkboxDetails, vbInformation, "Checkbox Settings"
  Else
    MsgBox "No checkboxes found in the document.", vbInformation, "No Checkboxes"
  End If

End Sub
