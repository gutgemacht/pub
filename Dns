Sub CopyDropdownEntriesToAll()
    Dim cc As ContentControl
    Dim sourceDropdown As ContentControl
    Dim targetDropdown As ContentControl
    Dim item As ContentControlListEntry
    
    ' Find the first dropdown list to use as the source
    For Each cc In ActiveDocument.ContentControls
        If cc.Type = wdContentControlDropdownList Then
            Set sourceDropdown = cc
            Exit For
        End If
    Next cc
    
    ' If no dropdown found, show a message and exit
    If sourceDropdown Is Nothing Then
        MsgBox "No dropdown lists found in the document.", vbExclamation
        Exit Sub
    End If
    
    ' Loop through all content controls in the document
    For Each cc In ActiveDocument.ContentControls
        ' Check if the content control is a dropdown list
        If cc.Type = wdContentControlDropdownList Then
            ' Skip the source dropdown (we don't want to copy into itself)
            If Not cc.Equals(sourceDropdown) Then
                ' Clear the target dropdown entries
                cc.DropdownListEntries.Clear
                
                ' Copy items from the source dropdown to the target dropdown
                For Each item In sourceDropdown.DropdownListEntries
                    cc.DropdownListEntries.Add item.Text
                Next item
            End If
        End If
    Next cc
    
    MsgBox "Dropdown items copied to all other dropdown lists.", vbInformation
End Sub
