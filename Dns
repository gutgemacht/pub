Sub ReplaceMultipleDropdowns()
    Dim ccList As Collection
    Dim ccFirst As ContentControl
    Dim ccSecond As ContentControl
    Dim tagFirst As String
    Dim tagSecond As String
    Dim i As Integer
    
    ' Create a collection to store dropdown pairs
    Set ccList = New Collection

    ' Loop through all content controls to identify dropdowns
    For Each cc In ActiveDocument.ContentControls
        ' Only work with dropdown lists
        If cc.Type = wdContentControlDropdownList Then
            ccList.Add cc
        End If
    Next cc
    
    ' Ensure at least two dropdowns exist in the document
    If ccList.Count >= 2 Then
        ' Loop through the dropdown pairs and replace them
        For i = 1 To ccList.Count Step 2
            ' Ensure there is a pair of dropdowns
            If i + 1 <= ccList.Count Then
                Set ccFirst = ccList(i)
                Set ccSecond = ccList(i + 1)
                
                ' Clear the second dropdown's items
                ccSecond.DropdownListEntries.Clear
                
                ' Copy items from the first dropdown to the second
                For Each item In ccFirst.DropdownListEntries
                    ccSecond.DropdownListEntries.Add item.Text
                Next item
                
                ' Optionally select the first item in the second dropdown
                ccSecond.DropdownListEntries(1).Select
            End If
        Next i
        
        MsgBox "Dropdown menus replaced successfully."
    Else
        MsgBox "There are not enough dropdowns to replace."
    End If
End Sub
